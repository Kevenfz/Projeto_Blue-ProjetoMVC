<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projeto Pokedex</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <header> 
        <h1>Pokedex</h1>
    </header>

    <main> 
        <section id="cards">
            
            <% pokemons.forEach((pokemon) => { %>
                <div class="card">
                    <img src="<%= pokemon.img %>" alt="Ilustração do Pokemon">
                    <h2> <%= pokemon.nome %> - <%= pokemon.id %> </h2>
                    <p id="text"> <%= pokemon.descricao %> </p>
                    <p id="type"> <%= pokemon.tipo %> </p>
                </div>
            <% }) %>
        
        </section>
    </main>
</body>

</html> 